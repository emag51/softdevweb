        <h1>Student grade page</h1>
        <h2>Personal data</h2>
        <p>Student ID : <%= data.id %></p>
        <p>Name       : <%= data.name %></p>
        <p>Tel        : <%= data.tel %></p>
        <p>GPAX       : <%= data.gpax %></p>

        <h2>YEAR3 First semaster Table</h2>
        <table id="customers">
            <tr>
              <th>Subject</th>
              <th>Creidit</th>
              <th>Grade</th>
            </tr>
            <tr>
              <% for(var i=0; i<(data.year3sub1.length)-1; i+=3) {%>
                <tr>
                  <td><%= data.year3sub1[i] %></td>
                  <td><%= data.year3sub1[i+1] %></td>
                  <td><%= data.year3sub1[i+2] %></td>
                </tr>
              <% }%>
            </tr>
            <tr>
              <td></td>
              <td>GPA</td>
              <td><%= data.year3sub1[(data.year3sub1.length)-1] %></td>
            </tr>
        </table>
        <h2>YEAR3 Second semaster Table</h2>
        <table id="customers">
            <tr>
              <th>Subject</th>
              <th>Creidit</th>
              <th>Grade</th>
            </tr>
            <tr>
              <% for(var i=0; i<(data.year3sub2.length)-1; i+=3) {%>
                <tr>
                  <td><%= data.year3sub2[i] %></td>
                  <td><%= data.year3sub2[i+1] %></td>
                  <td><%= data.year3sub2[i+2] %></td>
                </tr>
              <% }%>
            </tr>
            <tr>
              <td></td>
              <td>GPA</td>
              <td><%= data.year3sub2[(data.year3sub2.length)-1] %></td>
            </tr>
        </table>
    </body>
</html>