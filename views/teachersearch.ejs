<!DOCTYPE html>
<html>
    <head>
        <title>grade</title>
        <link rel="stylesheet" href="../views/search.css">
    </head>
    <body>
        <ul>
        <img src="../picture/logo 3.png" width="134.76" height="46.43">
        <li><a class="active" href="/teacherdata">DATA EDITTING</a></li>
        <li><a href="/teacherhome">HOME</a></li>
        </ul>

        <h1>Teacher Search page</h1>
        <h2>Personal data</h2>
        <p>Teacher ID : <%= data.id %></p>
        <p>Name       : <%= data.name %></p>
        <p>Tel        : <%= data.tel %></p>
        <p><input type="text" name="" id="text" placeholder="enter data"><br></p>
        <button id="myBtn">start searching</button>
        <div id="myModal" class="modal">

            <!-- Modal content -->
            <div class="modal-content">
              <span class="close">&times;</span>
              <p>Name       : <%= data.name %></p>
              <p>Email       : <%= data.email %></p>
              <p>Line ID       : <%= data.line %></p>
              <p>Tel       : <%= data.tel %></p>
              <p>Food allergy: <%= data.food %></p>
              <p>Personal disease: <%= data.health %></p>
            </div>
          
          </div>
    </body>
    <script>
        // Get the modal
        var modal = document.getElementById("myModal");

        // Get the button that opens the modal
        var btn = document.getElementById("myBtn");

        // Get the <span> element that closes the modal
        var span = document.getElementsByClassName("close")[0];

        // When the user clicks the button, open the modal 
        btn.onclick = function() {
        modal.style.display = "block";
        }

        // When the user clicks on <span> (x), close the modal
        span.onclick = function() {
        modal.style.display = "none";
        }

        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function(event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
        }
    </script>
</html>